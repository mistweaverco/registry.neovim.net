{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "PackageInfo",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"homepage": {
			"type": "string",
			"format": "uri"
		},
		"licenses": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"languages": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"categories": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"required": ["name", "description", "homepage", "licenses", "categories"],
	"additionalProperties": false
}
